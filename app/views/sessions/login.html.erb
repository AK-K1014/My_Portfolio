<% provide(:title, "login") %>
<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | My Portfolio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <div class="col-md-6">
        <h1 class="login_title text-center">ログイン</h1>

        <%= form_with(url: login_path, scope: :sesson) do |f| %>
          <div class="form-group">
            <%= f.label :メールアドレス %>
            <%= f.email_field :email, class: 'form-control', value: 'kudo@example.com' %>
          </div>

          <div class="form-group">
            <%= f.label :パスワード %>
            <%= f.password_field :password, class: 'form-control', value: 'password' %>
          </div>

          <div class="text-center">
            <%= f.submit "ログインする", class: "btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>

      <div class="container">
        <%= yield %>
        <%= render 'layouts/footer' %>
      </div>
    </div>
  </body>
</html>






